{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "webapp/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build",
        "buildCommand": "npm install --legacy-peer-deps && npm run build",
        "nodeVersion": "18.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/webapp/build/static/$1"
    },
    {
      "src": "/favicon.ico",
      "dest": "/webapp/build/favicon.ico"
    },
    {
      "src": "/manifest.json",
      "dest": "/webapp/build/manifest.json"
    },
    {
      "src": "/(.*)",
      "dest": "/webapp/build/index.html"
    }
  ]
} 